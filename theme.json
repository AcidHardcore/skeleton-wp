{
  "$schema": "https://schemas.wp.org/trunk/theme.json",
  "version": 1,
  "settings": {
    "color": {
      "palette": [
        {
          "slug": "black",
          "color": "#000000",
          "name": "Black"
        },
        {
          "slug": "white",
          "color": "#FFFFFF",
          "name": "White"
        }
      ]
    },
